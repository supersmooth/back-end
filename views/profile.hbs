<div class="row">
<br>
<div id="message"></div>

<div class="jumbotron profile">

    <div class="col-lg-2 glyphicon glyphicon-user userpic"></div>

    <div class="col-lg-10">
        <h1>{{data.owner}}'s Profile</h1>

        {{#unless data.isOwner}}
        <button class="btn btn-primary" data-add-friend="" >add {{data.owner}}</button>
        {{/unless}}

        <span> Friends: </span>

        {{!-- for each friend --}}
        {{#each data.friends}}
            <a href="/u/{{this}}">{{this}}</a>
        {{/each}}
    </div>
</div>

{{#if data.isOwner}}
    <div class="col-lg-12 well well-lg">
        <form action="/thread" method="post" class="input-group">
            <input class="form-control" name="content" cols="30" rows="3" placeholder="Enter Thread..." class="form-control">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">Submit</button>
            </span>
        </form>
    </div>
{{/if}}

<h2>{{data.flash}}</h2>

{{!-- for each thread on profile --}}
{{#each data.threads}}
    {{> thread}}
{{/each}}