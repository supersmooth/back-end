<h2>{{data.flash}}</h2>

    <div class="col-lg-12">
        {{data.thread.body}}
        <br>

        <span>[{{data.thread.likes.length}} like(s)]</span>
        <span class='error hidden'>You've already liked this!</span>
        
        {{!-- like this thread --}}
        <button id="{{data.thread._id}}" class="like">like</button>
        
        <br>
        <br>

        {{!-- for each comment in thread --}}
        {{#each data.thread.comments}}
            <p class="nested">
                {{this.body}}
                <br>
                by: <a href="/u/{{this.author}}">{{this.author}}</a>
                [{{this.likes.length}} like]
                <p class="_id">{{this._id}}</p>
            </p>
        {{/each}}  
        {{!-- for each comment in thread --}}

    </div>
